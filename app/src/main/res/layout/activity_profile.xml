<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bluebck"
    tools:context=".Profile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="20dp"
        android:background="@drawable/profilebck"
        >


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_default_profile"

            android:layout_centerHorizontal="true"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFFFFFFF" />

        <TextView
            android:id="@+id/Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_image"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/redhatdisplaybold"
            android:includeFontPadding="false"
            android:paddingTop="10dp"
            android:text="Default Contact"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/emailListIcon"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:elevation="10dp"
            app:srcCompat="@drawable/ic_baseline_notifications_active_24" />

        <TextView
            android:id="@+id/emailListText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/redhatdisplaybold"
            android:text="Remove From Email List"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="70dp"
            android:layout_marginEnd="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginStart="35dp"
            android:background="@drawable/whitebck"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_baseline_account_box_24" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/redhatdisplaybold"
                    android:text="Email:"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/redhatdisplaybold"
                    android:gravity="end"
                    android:text="Change"
                    android:textAlignment="viewEnd"
                    android:textColor="#00FFF7"
                    android:textSize="16dp"
                    tools:visibility="visible" />

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/editbox"
                    android:fontFamily="@font/redhatdisplaybold"
                    android:gravity="center_horizontal"
                    android:hint="New Email"
                    android:id="@+id/edit_email"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    tools:visibility="gone" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/appCompatImageView9"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:alpha="0.5"
                android:background="#FFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/redhatdisplaybold"
                    android:text="Address:"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#00FFF7"
                    android:fontFamily="@font/redhatdisplaybold"
                    android:gravity="end"
                    android:text="Change"
                    android:textAlignment="viewEnd"
                    android:textSize="16dp"
                    android:visibility="visible"/>

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/editbox"
                    android:fontFamily="@font/redhatdisplaybold"
                    android:gravity="center_horizontal"
                    android:hint="New Email"
                    android:id="@+id/edit_address"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    tools:visibility="gone" />


            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/appCompatImageView8"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:alpha="0.5"
                android:background="#FFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/redhatdisplaybold"
                    android:text="Phone Number:"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#00FFF7"
                    android:fontFamily="@font/redhatdisplaybold"
                    android:gravity="end"
                    android:text="Change"
                    android:textAlignment="viewEnd"
                    android:textSize="16dp"
                    android:visibility="visible"/>

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/editbox"
                    android:fontFamily="@font/redhatdisplaybold"
                    android:gravity="center_horizontal"
                    android:hint="New Email"
                    android:textAlignment="center"
                    android:id="@+id/edit_phone_number"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    tools:visibility="gone" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/appCompatImageView7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:alpha="0.5"
                android:background="#FFFFFF" />

        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/contactmodifybtn"
            android:text="MODIFY"
            android:textSize="20dp"
            android:fontFamily="@font/redhatdisplaybold"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>