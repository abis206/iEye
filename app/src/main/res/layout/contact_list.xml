<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/card"
    >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/darkwhite">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/ic_default_profile"
            android:id="@+id/contact_list_image"
            android:padding="5dp"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/darkerblue"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Emily Johnson"
                android:textAlignment="center"
                android:textColor="#120E21"
                android:fontFamily="@font/redhatdisplaybold"
                android:textSize="30dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal"
                android:id="@+id/contact_list_name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="e@gmail.com"
                android:textAlignment="center"
                android:fontFamily="@font/redhatdisplaybold"
                android:textSize="25dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal"
                android:id="@+id/contact_list_email"/>

        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>